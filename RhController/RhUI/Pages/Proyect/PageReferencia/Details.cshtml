@section Scripts{

	<script type="text/javascript">
			function demoFromHTML() {
				var pdf = new jsPDF('p', 'mm', [297, 210]);

				source = $('#customers')[0];

				specialElementHandlers = {

					'#bypassme': function (element, renderer) {

						return true
					}
				};

				margins = {
					bottom: 10,
					left: 10,
					width: 600
				};

				pdf.fromHTML(
					source,
					margins.left,
					margins.top, {
					'width': margins.width,
					'elementHandlers': specialElementHandlers
				},
					function (dispose) {

						pdf.save('Work-IO.pdf');
					}
					, margins);
			}
	</script>
}