@page
@model RhUI.Pages.Proyect.PageEmpresa.DeleteModel
@{
}
	<body style="margin-right:50px; background-color:white; margin-left:50px; margin-top:25px; border:double; border-color:darkmagenta;">
		<h2>Eliminar Referencia</h2>

		<h3>¿Está seguro que deseas eliminar esta Empresa?</h3>
		<div>
			<hr />
			<dl class="row">
				<dt class="col-sm-3">
					Id Referencia:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.Empresa.Id)
				</dd>
				<dt class="col-sm-3">
					Nombre:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.Empresa.Nombre)
				</dd>
				<dt class="col-sm-3">
					Telefono:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.Empresa.Telefono)
				</dd>
				<dt class="col-sm-3">
					Dirección:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.Empresa.Direccion)
				</dd>
				<dt class="col-sm-3">
					Fecha de registro:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.Empresa.CreatedAT)
				</dd>


			</dl>

			<!--pasamos el id para asegurarnos de que lo que eliminara sera el corecto  -->
			<form method="post">
				<input type="hidden" asp-for="Empresa.Id" />
				<input type="submit" value="Eliminar" class="btn btn-danger" /> |
				<a class="btn btn-secondary" asp-page="./IndexEmpresa">Cancelar</a>
			</form>

		</div>
		</body>