@page
@model RhUI.Pages.Proyect.PageCandidato.EditModel
@{
}
	<body style="margin-right:50px; background-color:white; margin-left:50px; margin-top:25px; border:double; border-color:darkmagenta;">
		<h2>Editar información</h2>

		<h4>Candidato</h4>
		<hr />
		<div class="row">
			<div class="col-md-4">
				<form method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="Candidato.Id" />
					<div class="form-group">
						<label asp-for="Candidato.Id" class="control-label">Id Candidato: </label>
						<input asp-for="Candidato.Id" disabled class="form-control" />
						
					</div>
					<div class="form-group">
						<label asp-for="Candidato.Nombre" class="control-label">Nombre: </label>
						<input asp-for="Candidato.Nombre" disabled class="form-control" />
						
					</div>
					<div class="form-group">
						<label asp-for="Candidato.Apellido" class="control-label">Apellido: </label>
						<input asp-for="Candidato.Apellido" disabled class="form-control" />
						
					</div>
					<div class="form-group">
						<label asp-for="Candidato.Direccion" class="control-label">Dirección: </label>
						<input asp-for="Candidato.Direccion" class="form-control" />
						<span asp-validation-for="Candidato.Direccion" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Candidato.FechaNac" class="control-label">Fecha de nacimiento: </label>
						<input asp-for="Candidato.FechaNac" disabled class="form-control" />
						
					</div>
					<div class="form-group">
						<label asp-for="Candidato.Genero" class="control-label">Genero: </label>
						<input asp-for="Candidato.Genero" disabled class="form-control" />
						
					</div>
					<div class="form-group">
						<label asp-for="Candidato.Curp" class="control-label">CURP: </label>
						<input asp-for="Candidato.Curp" disabled class="form-control" />
						
					</div>
					<div class="form-group">
						<label asp-for="Candidato.Nacionalidad.Nombre" class="control-label">Nacionalidad: </label>
						<input asp-for="Candidato.Nacionalidad.Nombre" disabled class="form-control" />
					</div>
					<label asp-for="Candidato.EstadoCivil">Estado Civil:</label>
					<select asp-for="Candidato.EstadoCivil">
						<option value="selectCiv" selected>Selecciona un estado civil </option>
						<option value="Casado">Casado </option>
						<option value="Soltero">Soltero</option>
						<option value="Union libre">Union Libre</option>
						<option value="Viudo">Viudo</option>
						<option value="Divorciado">Divorciado</option>
					</select>
					<div class="form-group">
						<label asp-for="Candidato.Orden.PuestoSolicitado" class="control-label">Puesto Solicitado: </label>
						<input asp-for="Candidato.Orden.PuestoSolicitado" disabled class="form-control" />
					</div>
					<div class="form-group">
						<label asp-for="Candidato.CreatedAT" class="control-label">Fecha de registro</label>
						<input asp-for="Candidato.CreatedAT" disabled class="form-control" />
					</div>

					<div class="form-group">
						<input type="submit" value="Guardar" class="btn btn-primary" /> |
						<a class="btn btn-secondary" asp-page="./IndexCandidato">Cancelar</a>
					</div>
				</form>
			</div>
		</div>

		@section Scripts {
			@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
		}
	</body>