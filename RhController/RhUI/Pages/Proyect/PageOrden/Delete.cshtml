@page
@model RhUI.Pages.Proyect.PageOrden.DeleteModel
@{
	ViewData["Title"] = "Eliminar";
}

<h2>Eliminar Orden</h2>

<h3>¿Está seguro que deseas eliminar esta Orden?</h3>
<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-3">
			Id Orden:
		</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.Orden.Id)
		</dd>
		<dt class="col-sm-3">
			Nombre:
		</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.Orden.PuestoSolicitado)
		</dd>
		<dt class="col-sm-3">
			Empresa al que pertenece:
		</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.Orden.Empresa.Nombre)
		</dd>
		<dt class="col-sm-3">
			Fecha de creación:
		</dt>
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model => model.Orden.CreatedAT)
		</dt>



	</dl>

	<!--pasamos el id para asegurarnos de que lo que eliminara sera el corecto  -->
	<form method="post">
		<input type="hidden" asp-for="Orden.Id" />
		<input type="submit" value="Eliminar" class="btn btn-danger" /> |
		<a class="btn btn-secondary" asp-page="./Index">Cancelar</a>
	</form>

</div>
